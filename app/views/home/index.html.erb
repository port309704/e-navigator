<h1>ようこそ <%= current_user.name %>さん</h1>
<h3>トップページです。</h3>
<p>
<%= link_to "プロフィールを見る", "account" %>
</p>
<% if user_signed_in? %>
  <strong><%= current_user.email %></strong>. としてログインしています。<br> 
  <%= link_to "アカウントの設定", edit_user_registration_path, :class => "navbar-link" %>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, :class => "navbar-link" %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link' %>
<% end %>
